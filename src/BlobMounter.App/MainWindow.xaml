<Window x:Class="BlobMounter.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Azure Blob Mounter" Height="520" Width="520"
        MinHeight="480" MinWidth="460"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip">
    <Window.Resources>
        <Style TargetType="TextBox" x:Key="FieldStyle">
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Padding" Value="4,3"/>
        </Style>
        <Style TargetType="PasswordBox" x:Key="PasswordFieldStyle">
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Padding" Value="4,3"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Configuration Panel -->
        <GroupBox Grid.Row="0" Header="Connection Settings" Padding="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Account Name" VerticalAlignment="Center" Margin="0,0,8,8"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding AccountName, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource FieldStyle}"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Account Key" VerticalAlignment="Center" Margin="0,0,8,8"/>
                <PasswordBox Grid.Row="1" Grid.Column="1" x:Name="AccountKeyBox" Style="{StaticResource PasswordFieldStyle}" PasswordChanged="AccountKeyBox_PasswordChanged"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Container" VerticalAlignment="Center" Margin="0,0,8,8"/>
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding ContainerName, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource FieldStyle}"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Subfolder" VerticalAlignment="Center" Margin="0,0,8,8"/>
                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Subfolder, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource FieldStyle}"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Drive Letter" VerticalAlignment="Center" Margin="0,0,8,8"/>
                <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,8">
                    <ComboBox ItemsSource="{Binding AvailableDriveLetters}" SelectedItem="{Binding SelectedDriveLetter}" Width="60"/>
                    <TextBlock Text=":" VerticalAlignment="Center" Margin="2,0,16,0"/>
                    <CheckBox Content="Read-Only" IsChecked="{Binding ReadOnly}" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" Margin="0,4,0,0">
                    <Button Content="Test Connection" Command="{Binding TestConnectionCommand}" Padding="12,4" Margin="0,0,8,0"/>
                    <Button Content="Mount" Command="{Binding MountCommand}" Padding="20,4"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Mounted Drives -->
        <GroupBox Grid.Row="1" Header="Mounted Drives" Padding="8" Margin="0,12,0,0">
            <ListView ItemsSource="{Binding MountedDrives}" BorderThickness="0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding DisplayName}" VerticalAlignment="Center"/>
                            <Button Grid.Column="1" Content="Unmount" Padding="8,2"
                                    Command="{Binding DataContext.UnmountCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
        </GroupBox>

        <!-- Status Bar -->
        <Border Grid.Row="2" Margin="0,8,0,0" Padding="8,4" Background="#F0F0F0" CornerRadius="3">
            <TextBlock Text="{Binding StatusMessage}" TextTrimming="CharacterEllipsis"/>
        </Border>
    </Grid>
</Window>
